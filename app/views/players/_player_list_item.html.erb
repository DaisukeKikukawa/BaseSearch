<li class="py-3 mb-3 border-bottom border-black align-middle">
  <div class="defensive-position">
    <span class="<%= player_position %> fs-5 fw-bold"><%= player_position_title %></span>
  </div>
</li>
<% players.each do |player| %>
  <li class="defensive-position py-2 border-bottom align-middle">
    <div class="container">
      <div class="row player-row">
        <!-- 選手写真 -->
        <div class="col-3 px-1 player-wrap">
          <% if player.player_image.present? %>
            <%= image_tag(player.player_image, class: "img-fluid border border-3 rounded-4 player-img", alt: "選手写真") %>
          <% else %>
            <%= image_tag("player/demo_player.jpg", class: "img-fluid border border-3 rounded-4 player-img", alt: "選手写真") %>
          <% end %>
        </div>

        <!-- 背番号 -->
        <div class="col-3 px-1 player-wrap">
          <% if player.uniform_image.present? %>
            <%= image_tag(player.uniform_image, class: "img-fluid align-middle uniform-img", alt: "背番号") %>
          <% end %>
        </div>

        <!-- 詳細 -->
        <div class="col-6 px-1 detail">
          <div class="defensive-position mb-0">
            <ruby class="fw-bold name">
              <%= player.name %>
              <rt><%= player.kana %></rt>
            </ruby>
            <br />
            <div class="player-detail">
              <div><%= display_birth_date_and_age(player) if player.birth_date.present? %></div>

              <span class="<%= player_position %>">
                <%= I18n.t("activerecord.attributes.player.positions.#{player.position}") %>
              </span>
              <% if player.sub_positions %>
                、<span><%= display_sub_positions(player.sub_positions).join('、') %></span>
              <% end %>
              <span>
                / <%= I18n.t("activerecord.attributes.player.handednesses.#{player.handedness}") %><%= I18n.t("activerecord.attributes.player.handedness_bats.#{player.handedness_bat}") %>
              </span>

              <p class="mb-0">出身：<%= player.alma_mater %></p>
              <p class="mb-0 one-word">一言：<%= player.catchphrase %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </li>
<% end %>
