<div class="row" id="inner">
  <div class="col">
    <div class="d-flex flex-column justify-content-center align-items-center py-3">
      <div class="vstack">
        <div class="px-2 py-4 border-bottom category_container">
          <%= link_to("日程・結果", games_path,class: "category_a fs-5 text-decoration-none text-black d-block") %>
        </div>
        <div class="px-2 py-4 border-bottom category_container">
          <%= link_to("チーム検索", team_search_path,class: "category_a fs-5 text-decoration-none text-black d-block") %>
        </div>
        <div class="px-2 py-4 border-bottom category_container">
          <%= link_to("大会一覧", tournaments_path,class: "category_a fs-5 text-decoration-none text-black d-block") %>
        </div>
        <div class="px-2 py-4 border-bottom category_container">
          <%= link_to("球場一覧", grounds_path,class: "category_a fs-5 text-decoration-none text-black d-block") %>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :splash do %>
  <div class="splash-wrap">
    <div id="splash">
      <%= image_tag "kyuto_logo.png", alt: "ロゴ" %>
      <h1>桐生野球チームナビ</h1>
    </div>
  </div>
<% end %>

<%= stylesheet_link_tag "front/splash", "data-turbo-track": "reload" %>
<% content_for :javascripts do %>
  <%= javascript_import_module_tag "splash" %>
<% end %>
