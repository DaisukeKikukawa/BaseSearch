<div class="container-xl mb-5">
  <div class="py-1 mb-3">
    <h3 class="border-start border-black border-3 fs-6 fw-bold">
      <span class="ps-1 fs-3">チーム概要</span>
    </h3>
  </div>
  <div class="mb-3 border-bottom border-light-subtle">
    <div class="text-black">
      <p class="fw-bold mb-1 ms-1 fs-4">チーム名</p>
    </div>
    <div class="h4 pb-1">
      <p class="fs-5 fw-normal text-black mb-0 ms-1"><%= @team.name %></p>
    </div>
  </div>
  <div class="mt-3 mb-3 border-bottom border-light-subtle">
    <div class="text-black">
      <p class="fw-bold mb-1 ms-1 fs-4">代表/監督</p>
    </div>
    <div class="h4 pb-1">
      <% if @team.representative_name.present? || @team.coach_name.present? %>
        <p class="fs-5 fw-normal text-black mb-0 ms-1">
          <%= @team.representative_name %>/<%= @team.coach_name %>
        </p>
      <% end %>
    </div>
  </div>
  <div class="mt-3 mb-3 border-bottom border-light-subtle">
    <div class="text-black">
      <p class="fw-bold mb-1 ms-1 fs-4">活動拠点</p>
    </div>
    <div class="h4 pb-1">
      <p class="fs-5 fw-normal text-black mb-0 ms-1"><%= @team.activity_base %></p>
    </div>
  </div>
  <div class="mt-3 mb-3 border-bottom border-light-subtle">
    <div class="text-black">
      <p class="fw-bold mb-1 ms-1 fs-4">年間試合数</p>
    </div>
    <div class="h4 pb-1">
      <p class="fs-5 fw-normal text-black mb-0 ms-1"><%= @total_games %>試合</p>
    </div>
  </div>
  <div class="mt-3 mb-3 border-bottom border-light-subtle">
    <div class="text-black">
      <p class="fw-bold mb-1 ms-1 fs-4">活動日</p>
    </div>
    <div class="h4 pb-1">
      <p class="fs-5 fw-normal text-black mb-0 ms-1"><%= @team.activity_day %></p>
    </div>
  </div>
  <div class="mt-3 mb-3 border-bottom border-light-subtle">
    <div class="text-black">
      <p class="fw-bold mb-1 ms-1 fs-4">チームロゴ</p>
    </div>
    <div class="p-3 logo-wrap">
      <% if @team.team_logo.present?%>
        <%= image_tag(@team.team_logo, class: "team_uniform h4 pb-1") %>
      <% end %>
    </div>
  </div>
  <div class="mt-3 mb-3 border-bottom border-light-subtle">
    <div class="text-black">
      <p class="fw-bold mb-1 ms-1 fs-4">チームユニフォーム</p>
    </div>
    <div class="p-3 uniform-wrap">
      <% if @team.team_uniform.present?%>
        <%= image_tag(@team.team_uniform, class: "team_uniform h4 pb-1") %>
      <% end %>
    </div>
  </div>
</div>