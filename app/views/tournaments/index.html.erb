<% content_for(:page_title, '大会一覧') %>
<div class="container mt-3">
  <%= render 'month_year_filter' %>

  <div>
    <% if @tournament_records.present? %>
      <% @tournament_records.each do |tournament_record| %>
        <div class="row justify-content-between align-items-center my-4">
          <div class="col text-center">
            <div class="row">
              <span class="fs-5"><%= tournament_record.name %></span>
              <span><%= tournament_record.started_at.strftime("%Y年%-m月%-d日") %>〜<%= tournament_record.ended_at.strftime("%Y年%-m月%-d日") %></span>
            </div>
          </div>
          <div class="text-center mt-2">
            <%= link_to '大会詳細',
                        tournament_path(tournament_record.tournament.id),
                        class: 'btn btn-outline-secondary px-2',
                        style: 'width: 150px;'
            %>
            <%= link_to '大会日程・結果',
                        tournament_games_path(tournament_record, filter: "schedule"),
                        class: "btn btn-outline-secondary px-2 #{'disabled' unless has_games?(tournament_record)}",
                        style: 'width: 150px;'
            %>
          </div>
        </div>
        <hr>
      <% end %>
    <% else %>
      <div class="mt-3 text-black-50">
        <p class="text-center ">登録されている大会はありません</p>
      </div>
    <% end %>
  </div>
</div>
