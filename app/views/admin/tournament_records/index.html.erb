<h1 class="mb-3">大会/大会名一覧</h1>

<%= render "search_form" %>

<div class="card my-4">
  <div class="card-header">
    <div class="card-tools">
      <%= button_to("新規作成", new_admin_tournament_record_path, class: "btn btn-primary", method: :get) %>
    </div>
  </div>

  <div id="games">
    <div class="card-body table-responsive p-0">
      <table class="table text-nowrap table-bordered">
        <thead>
          <tr>
            <th><%= sort_link(@q, :id, "ID") %></th>
            <th>大会名（大会）</th>
            <th><%= sort_link(@q, :started_at, "開始日") %></th>
            <th><%= sort_link(@q, :ended_at, "終了日") %></th>
          </tr>
        </thead>
        <tbody>
          <% @tournament_records.each do |tournament_record| %>
            <%= render tournament_record %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
