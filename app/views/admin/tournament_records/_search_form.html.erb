<%= search_form_for @q, url: admin_tournament_records_path, html: { method: :get } do |f| %>
  <div class="d-flex flex-wrap">
    <div class="form-group mr-3">
      <%= f.label :id_eq, 'ID' %>
      <%= f.search_field :id_eq %>
    </div>
    <div class="form-group mr-3">
      <%= f.label :name_cont, '大会名' %>
      <%= f.search_field :name_cont %>
    </div>
    <div class="form-group mr-3">
      <%= f.label :started_at_date_equals, '開始日' %>
      <%= f.date_field :started_at_gteq, class: "p-1" %> ~
      <%= f.date_field :started_at_lteq, class: "p-1" %>
    </div>
    <div class="form-group mr-3">
      <%= f.label :ended_at_date_equals, '終了日' %>
      <%= f.date_field :ended_at_gteq, class: "p-1" %> ~
      <%= f.date_field :ended_at_lteq, class: "p-1" %>
    </div>
  </div>

  <%= f.submit '検索', class: 'btn btn-primary' %>
  <%= link_to 'リセット', admin_tournament_records_path, class: 'btn btn-secondary' %>
<% end %>