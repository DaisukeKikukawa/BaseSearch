<tr id="<%= dom_id game %>">
  <td><%= link_to game.id, [:admin, game] %></td>
  <td><%= game.home_team.name %></td>
  <td><%= game.away_team.present? ? game.away_team.name : game.away_team_name %></td>
  <td><%= game.ground.name %></td>
  <td>
    <%= game.tournament_record.tournament.name %> /
    <%= game.tournament_record.name %>
  </td>
  <td><%= game.start_time.strftime("%Y-%m-%d %H:%M") %></td>
  <td><%= I18n.t("activerecord.attributes.game.tag_types.#{game.tag_type}") %></td>
  <%= render 'article_record', game: game %>
  <td><%= "#{game.home_team_score} - #{game.away_team_score}" if game.home_team_score %></td>
</tr>
